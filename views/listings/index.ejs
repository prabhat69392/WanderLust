<% layout("/layouts/boilerplate") %>

<style>
  .filters {
    margin-top: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .filter {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    /* border: 1px solid #6b5e5e; */
    border-radius: 10px;
    cursor: pointer;
    transition: 0.3s;
  }

  .filter:hover {
    background-color: #f4efef;
  }
  .tax-toggle{
     border: 1px solid #6b5e5e;
     padding: 0.5rem 1rem;
     border-radius: 10px;
      
  }
  .tax-toggle:hover{
     background-color: #f4efef;
  }
  
</style>

<div class="filters">
  <div class="filter">
    <i class="fa-solid fa-fire"></i>
    <p>Trending</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Room</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountain</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain-city"></i>
    <p>City</p>
  </div>
  <div class="filter">
    <i class="fa-brands fa-fort-awesome"></i>
    <p>Fort</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-tree"></i>
    <p>Farm House</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-ship"></i>
    <p>Ship</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-person-swimming"></i>
    <p>Fool</p>
  </div>
  <div class="filter">
   <i class="fa-solid fa-tent"></i> 
    <p>Camping</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>
  <div class="tax-toggle">
    <div class="form-check form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckChecked" checked>
  <label class="form-check-label" for="switchCheckChecked">Total Cost Include Tax</label>
</div>
  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 mt-3">
  <% for(let listing of allListing){ %> 
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card" style="width: 20rem;">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
        <div class="card-img-overlay">Prabhat</div>
        <div class="card-body">
          <b><p class="card-text"><%= listing.title %></p></b>
          â‚¹<%= listing.price.toLocaleString("en-IN") %>/per night
          <i class="tax-info"> &nbsp; +18% GST </i>
        </div>
      </div>
    </a>
  <% } %>
</div>

<script>
let taxSwitch= document.getElementById("switchCheckChecked");
 taxSwitch.addEventListener("click",()=>{
     let taxinfo = document.getElementsByClassName("tax-info");
     for(info of taxinfo){
       if(info.style.display != "inline"){
           
       info.style.display="inline"
       }
       else{
          info.style.display="none"
       }
     }
 })
</script>
