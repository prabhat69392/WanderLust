<% layout("/layouts/boilerplate.ejs") %>
<body>
<div class="row">
  <div class="col-8 offset-2">
  <h1>Create New Listing</h1>
 <form  method="POST" action="/listing" novalidate class="needs-validation" enctype="multipart/form-data">
   <div class="mb-3">
   <lable for ="title"  class="form-label" >Title</lable>
  <input type ="text" placeholder="enter title" name="listings[title]" class="form-control" required>
  <div class="valid-feedback">Looks good</div>
  <div class="invalid-feedback">Please enter a title</div>
  </div>
 
  <div>
  <lable for ="description"  class="form-label" >Description</lable>
  <textarea placeholder="enter description"  name="listings[description]" class="form-control" required></textarea>
  </div>
  
  <div class="mb-3">
  <lable for ="image"  class="form-label" > Upload listing image </lable>
  <input type ="file"  name="image" class="form-control">
  required
  </div>
  <div class="row">
  <div class="mb-3 col-md-4">
  <lable for ="price"  class="form-label" >Price</lable>
  <input  type="number"placeholder="enter price" name="listings[price]" class="form-control" required>
  </div>
 <div class="mb-3 col-md-8">
 <lable for ="country"  class="form-label" >Country</lable>
  <input type ="text" placeholder="enter country" name="listings[country]" class="form-control" required>
  </div>
  </div>
   <div class="mb-3">
   <lable for ="location"  class="form-label" >Location</lable>
  <input type ="text" placeholder="enter location" name="listings[location]" class="form-control" required >
  </div>
  <button  type="submit" class="btn btn-dark">submit</button>
</form>
</div>  
</div>
</body>
